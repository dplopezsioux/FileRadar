{
    "name": "file-radar",
    "displayName": "FileRadar",
    "description": "Scan and map project structures with radar precision. Generate AI-ready file maps from any folder.",
    "version": "0.2.4",
    "publisher": "dplopez",
    "icon": "ico.png",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "keywords": [
        "file tree",
        "directory map",
        "project structure",
        "ai context",
        "llm",
        "code mapping",
        "sonar"
    ],
    "activationEvents": [],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "file-radar.generateSonar",
                "title": "üéØ Generate Sonar File"
            },
            {
                "command": "file-radar.stampPaths",
                "title": "üè∑Ô∏è Stamp File Paths"
            },
            {
                "command": "file-radar.stampSingleFile",
                "title": "üè∑Ô∏è Stamp This File"
            }
        ],
        "menus": {
            "explorer/context": [
                {
                    "command": "file-radar.generateSonar",
                    "when": "explorerResourceIsFolder",
                    "group": "7_modification@1"
                },
                {
                    "command": "file-radar.stampPaths",
                    "when": "explorerResourceIsFolder",
                    "group": "7_modification@2"
                },
                {
                    "command": "file-radar.stampSingleFile",
                    "when": "!explorerResourceIsFolder && (resourceExtname == .js || resourceExtname == .py)",
                    "group": "7_modification@3"
                }
            ]
        },
        "configuration": {
            "title": "FileRadar",
            "properties": {
                "fileRadar.ignoredFolders": {
                    "type": "array",
                    "default": [
                        "node_modules",
                        ".git",
                        "dist",
                        "build",
                        ".vscode",
                        "coverage",
                        ".next",
                        "out",
                        "target"
                    ],
                    "description": "List of folders to ignore when generating the sonar file or stamping paths"
                }
            }
        }
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/dplopezsioux/FileRadar"
    },
    "license": "MIT"
}
